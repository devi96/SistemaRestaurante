      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Agregar</h5>
          <button id="close_modal" type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>MESA: </label>
            <div>
              <select class="js-example-basic-single" id="IDmesa" name="IDmesa" style="width:10em">
              </select>
            </div>

          </div>
          <div class="form-group">
            <label class="col-form-label">PLATILLO:</label>
            <div>
              <select class="js-example-basic-single"id="IDplatillo" name="IDplatillo" style="width:10em">
              </select>

            </div>

          </div>

