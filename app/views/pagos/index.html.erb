<% content_for :styles do %>
<link rel="stylesheet" href="/vendor/bootstrap-select/bootstrap-select.min.css">
<link rel="stylesheet" href="/vendor/select2/select2.min.css">
<link rel="stylesheet" href="/vendor/datatable/datatables.min.css">
<link rel="stylesheet" href="/libs/pagos.css">
<% end %>

<% content_for :scripts do %>
 <script src="/libs/pagos.js"></script>
<% end %>


<div class="container">
  <h2>REGISTROS DE VENTA</h2>
  <p>VENTAS del sistema</p>
  <table id="tabla_pago_listar" class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>MESA</th>
        <th>codigo_orden</th>
        <th>ruc</th>
        <th>Monto</th>
        <th>Moneda</th>
        <th>estado</th>
        <th>forma_pago</th>
        <th>comprobante_pago</th>
        <th>OPCIONES</th>
      </tr>
    </thead>
    <tbody>
      
    </tbody>
  </table>
</div>





<div class="modal fade" tabindex="-1" role="dialog" id="modal-pagar_pagos" aria-labelledby="">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">REGISTRAR PAGO</h5>
        <button id="close_modal" type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <div class="form-group">
          <label class="col-form-label">ESTADO:</label>
          <div>
            <select class="select form-control" data-live-search="true" id="estado_pago" name="estado_pago" style="width:10em">
              <option value="NO PAGADO" selected>NO PAGADO</option>
              <option value="PAGADO">PAGADO</option>
            </select>

          </div>

        </div>



        <div class="form-group ">
          <label>forma_pago: </label>
          <div>
            <select class="select form-control" data-live-search="true" id="forma_pago" name="forma_pago" style="width:10em">
                <option value="1" selected>TARJETA</option>
                <option value="1">EFECTIVO</option>
            </select>
          </div>

        </div>



        <div class="form-group ">
          <label>Comprobante de pago: </label>
          <div>
            <select class="select form-control"  data-live-search="true" id="comprobante_pago" name="comprobante_pago" style="width:10em">
                <option value="1" selected>BOLETA</option>
                <option value="1">FACTURA</option>
            </select>
          </div>

        </div>


        <div class="form-group">
          <label class="col-form-label">RUC</label>
          <div>
            <input id="ingresar_ruc" class="form-control" name="ingresar_ruc" type="text" value="">
          </div>
        </div>

        <div class="form-group">
          <button class="btn btn-primary" id="btn_pago_aceptar">Aceptar</button>
          <button class="btn btn-danger" id="btn_pago_cancelar" class="close" data-dismiss="modal">Cancelar</button>
        </div>
      </div>
    </div>
  </div>
</div>
